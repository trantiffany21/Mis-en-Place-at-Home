<%- include('./partials/header.ejs')%>
    <h1>Edit <%= item.invIngredient %></h1>
    <form class="w-50" action="/inventory/<%=item.id%>?_method=PUT" method="POST">
        <section class="form-group row">
            <fieldset class="col-auto">
                <label for="invIngredient">Ingredient: </label>
                <input type="text" class="form-control" id="invIngredient" name="invIngredient" value="<%=item.invIngredient%>">
            </fieldset>
            <fieldset class="col-auto">
                <label for="category">Category: </label>
                <select class="custom-select form-control" name="category" id="category">
                    <option selected><%=item.category%></option>
                    <% let options = [
                    'baking products',
                    'condiment',
                    'dairy',
                    'fats and oil',
                    'fruits',
                    'grains and nuts',
                    'herbs and spices',
                    'pasta',
                    'protein',
                    'vegetables',
                    'other']
                        for(elem of options) { %>
                            <option value="<%= elem %>"><%= elem %></option>
                        <% } %>
                </select>
            </fieldset>
        </section>
    <br><br>
    <input type="submit" class="btn btn-primary" value="Edit item" >
</form>
<article class="delete-btn">
        <form class="w-50" action="/inventory/<%=item.id%>?_method=DELETE" method="POST">
            <input class="btn btn-danger" type="submit" value="Delete Item">
        </form>
    </article>

<%- include('./partials/footer.ejs')%>