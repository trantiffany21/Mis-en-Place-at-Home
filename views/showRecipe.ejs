<%- include('./partials/header.ejs')%>
    <h1><%= recipe.name %></h1>
    <% if(recipe.img){ %>
        <img class="recipe-img" src="<%=recipe.img%>"" alt="<%=recipe.name%> image">
    <%}%>
    <ul>
        <li>
            
            Cuisine: <%= recipe.cuisine %> <br>
            Serving Size: <%= recipe.servingSize %> <br>
            Ingredients:
            <% for(elem of recipe.ingredientList){ %>
                <li>
                <%= elem.ingredient %>
                <%= elem.measurement %>
                <%= elem.measurementType %>
            </li>
                <br>
            <% } if(recipe.urlLink){ %>
                Recipe Link: <a href="<%= recipe.urlLink %>" target="_blank"><%= recipe.urlLink %></a> <br>
            <% }%>
                        
            Directions:
            <% for(let i = 0; i< recipe.directions.length; i++){ %>
                <li>
                    <%= i+1 %>
                    <%= recipe.directions[i] %>
                </li>
                <br>
            <% }%>
            Notes: <%= recipe.notes %> <br>
        </li>
</ul>
<% if(recipe.youtubeLink){ %>
    <article class="d-flex justify-content-center embed-responsive embed-responsive-16by9">
        <% let str = recipe.youtubeLink.split(/[/=]/)%>
         
        <iframe class="embed-responsive-item" 
        src="https://www.youtube.com/embed/<%=str[str.length-1]%>" allowfullscreen>
        </iframe>
    </article>
<% }%>

<br><br>
<section class="row">
    <article class="col-auto">
        <a href="/recipes/<%=recipe.id%>/edit"><button class="btn btn-outline-primary">Edit Recipe</button></a>
    </article>
    <article class="col-auto">
        <form action="/recipes/<%=recipe.id%>?_method=DELETE" method="POST">
            <input class="btn btn-outline-danger" type="submit" value="Delete Recipe">
        </form>
    </article>
</section>
<%- include('./partials/footer.ejs')%>