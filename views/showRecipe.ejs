<%- include('./partials/header.ejs')%>
    <h1><%= recipe.name %></h1>
    <ul>
        <li>
            Name: <%= recipe.name %> <br>
            Cuisine: <%= recipe.cuisine %> <br>
            Serving Size: <%= recipe.servingSize %> <br>
            Ingredients:
            <% for(elem of recipe.ingredientList){ %>
                <li>
                <%= elem.ingredient %>
                <%= elem.measurement %>
                <%= elem.measurementType %>
            </li>
                <br>
            <% } if(recipe.urlLink){ %>
                Recipe Link: <a href="<%= recipe.urlLink %>" target="_blank"><%= recipe.urlLink %></a> <br>
            <% }%>
            <% if(recipe.youtubeLink){ %>
                Youtube Link: <%= recipe.youtubeLink %> <br>
            <% }%>
            Directions:
            <% for(elem of recipe.directions){ %>
                <li>
                <%= elem %> : 
                <%= elem.direction %>
                </li>
                <br>
            <% }%>
            Notes: <%= recipe.notes %> <br>
        </li>
</ul>
<br><br>
<section class="row">
    <article class="col-auto">
        <a href="/recipes/<%=recipe.id%>/edit"><button class="btn btn-primary">Edit Recipe</button></a>
    </article>
    <article class="col-auto">
        <form action="/recipes/<%=recipe.id%>?_method=DELETE" method="POST">
            <input class="btn btn-primary" type="submit" value="Delete Recipe">
        </form>
    </article>
</section>
</body>
</html>